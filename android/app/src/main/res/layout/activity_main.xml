<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000" />

    <include
        android:id="@+id/loadingCover"
        layout="@layout/loading_cover"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/monitor"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="SasarinoMARi"
                android:textColor="#ffffff"
                android:textSize="27sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="#080808"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_light"
                android:text="현재 시스템 상태"
                android:textColor="#ffffff"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/power_standby"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/Loading"
                    android:textColor="#fff"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#10ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="원격 컴퓨터에서 실행할 명령을 선택하세요."
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_wakeup"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:background="#00A889"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="@string/Wakeup"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_shutdown"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:background="#EF3D56"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="@string/Shutdown"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_more"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:background="#D9A22E"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="@string/More"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>